                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/data_b"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2a_s"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3d_s"
                    android:layout_below="@+id/imageView3d_s"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Database"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2r"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView3r"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/repeat_y" />

                <TextView
                    android:id="@+id/textView2r"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3r"
                    android:layout_below="@+id/imageView3r"
                    android:gravity="center"
                    android:text="Repeat"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageView3r_s"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/repeat_b"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2r_s"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3r_s"
                    android:layout_below="@+id/imageView3r_s"
                    android:gravity="center"
                    android:text="Repeat"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2a"
                android:layout_width="80dp"
